<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <referenceContainer name="content.top">
        <block class="Magento\Framework\View\Element\Template" name="content_index_index" template="Shellpea_Content::index.phtml" />
    </referenceContainer>

    <referenceBlock name="top.links">
        <block class="Magento\Framework\View\Element\Html\Link" name="contentt-index-index">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">My Content</argument>
                <argument name="path" xsi:type="string" translate="true">content</argument>
            </arguments>
        </block>
    </referenceBlock>

</page>
